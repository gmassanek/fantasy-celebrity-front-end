<form action="" class="form-horizontal">

  <div class="form-group">
    <label class="col-md-3 control-label">Player</label>

    <div class="col-md-7">
      <select name="player" class="form-control">
        {{#each model.players as |player|}}
          <option value={{player.id}}>{{player.name}}</option>
        {{/each}}
      </select>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-3 control-label">Point Category</label>

    <div class="col-md-7">
      <select name="category" class="form-control">
        {{#each model.pointCategories as |category|}}
          <option value={{category.id}}>{{category.name}}</option>
        {{/each}}
      </select>
    </div>
  </div>


  <div class="form-group">
    <label class="col-md-3 control-label">Proof URL</label>

    <div class="col-md-7">
      <input type="text" name="proof" class="form-control">
    </div>
  </div>


  <div class="form-group">
    <div class="col-md-7 col-md-push-3">
      <button type="submit" class="btn btn-primary">Submit Points</button>
      &nbsp;
      <button type="reset" class="btn btn-default">Cancel</button>
    </div>
  </div>

</form>
